POSTGRES_PORT=5432
POSTGRES_DB=aimathtutordb

# Neo4j
NEO4J_URI=bolt://neo4j:7687  # Use 'bolt://localhost:7687' for local development, 'bolt://neo4j:7687' for Docker
NEO4J_USER=neo4j
NEO4J_PASSWORD=password  # Change this to a secure password!

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Sample Data
CREATE_SAMPLE_DATA=true  # Set to 'true' to create sample data on startup, 'false' for production